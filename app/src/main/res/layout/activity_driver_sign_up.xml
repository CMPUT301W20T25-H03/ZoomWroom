<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87ceeb"
    tools:context=".DriverSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="261dp"
            android:layout_height="251dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/driverlogo1"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/fullName"
            style="@style/driverLoginStyle"
            android:layout_marginBottom="10dp"
            android:hint="First and Last Name" />

        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/driversignup_text_shape"
            android:hint="Email Address"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/driversignup_text_shape"
            android:hint="Unique username"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/passWord"
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/driversignup_text_shape"
            android:text="Password"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="360dp"
            android:layout_height="41dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/driversignup_text_shape"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SignupActivity_BackBT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/SignupActivety_SignupBT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>