<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D5C68"
    tools:context=".DriverInfoForContactActivity">

    <RelativeLayout
        android:background="#A7A5C6"
        android:id="@+id/editpage_grad_layout"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/editpage_profile_text_layout">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/editpage_circle_board_layout"
                android:layout_width="wrap_content"
                android:background="@drawable/circle_board"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/editpage_imageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/circle"
                            android:padding="3dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_person_outline_white_24dp" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/driver_info_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="45sp" />
                    <TextView
                        android:id="@+id/driver_info_profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="username line"
                        android:textColor='@color/white'
                        android:textSize="20sp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/driver_infolayout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/editpage_grad_layout"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/driver_info_phonenumber_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:id="@+id/driver_info_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/Black1"
                android:text="Phone number:">

            </TextView>



        </LinearLayout>


        <LinearLayout

            android:id="@+id/driver_info_phonenumber_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/driver_info_phonenumber_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="29dp"
                android:text="7808852269"
                android:clickable="true"
                android:onClick="makecalltodriver"
                android:textColor="@color/CyanBlueGreen"
                >

            </TextView>
            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorLightGray" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/driver_info_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="34dp"
                android:textColor="@color/Black1"
                android:text="Email:">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/driver_info_email_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="29dp"
                android:clickable="true"
                android:onClick="sendemailtodriver"
                android:text="275475610@qq.com"
                android:textColor="@color/CyanBlueGreen"
                >

            </TextView>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorLightGray" />

        </LinearLayout>













    </LinearLayout>

    <LinearLayout

        android:background="@color/white"
        android:layout_below="@+id/driver_infolayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/editpage_rating_page_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_thumbs_up_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:fontFamily="sans-serif-light"
                android:src="@drawable/thumbs_up_unsel"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/profile_num_thumbsup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="23"
                android:fontFamily="sans-serif-light"
                android:textSize="26sp"
                android:textColor="@color/Black1"/>

            <ImageView
                android:id="@+id/profile_thumbs_down_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:adjustViewBounds="true"
                android:fontFamily="sans-serif-light"
                android:scaleType="centerInside"
                android:src="@drawable/thumbs_down_unsel"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/profile_num_thumbsdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="23"
                android:fontFamily="sans-serif-light"
                android:textSize="26sp"
                android:textColor="@color/Black1"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>