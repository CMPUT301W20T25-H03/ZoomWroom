<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D5C68"
    tools:context=".RiderProfileActivity">

    <RelativeLayout
        android:id="@+id/editpage_grad_layout"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/editpage_profile_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Profile"
                android:layout_centerInParent="true"
                android:textSize="45dp"
                android:textColor="@color/grey"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/editpage_profile_text_layout">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/editpage_circle_board_layout"
                android:layout_width="wrap_content"
                android:background="@drawable/circle_board"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/editpage_imageView"
                            android:layout_width="170dp"
                            android:layout_height="171dp"
                            android:adjustViewBounds="true"
                            android:layout_margin="10dp"
                            android:padding="3dp"
                            android:background="@drawable/circle"
                            android:scaleType="centerInside"
                            android:src="@drawable/user" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_username_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor='@color/white'
                        android:fontFamily="sans-serif-light"
                        android:text="bababoooey"/>
                    <TextView
                        android:id="@+id/profile_firstname_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="45dp"
                        android:text="Joey"/>
                    <TextView
                        android:id="@+id/profile_lastname_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="45dp"
                        android:text="Baboey"/>
                    <TextView
                        android:id="@+id/profile_email_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor='@color/white'
                        android:fontFamily="sans-serif-light"
                        android:text="275475610@qq.com"/>

                    <TextView
                        android:id="@+id/profile_phone_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor='@color/white'
                        android:fontFamily="sans-serif-light"
                        android:text="(780) 885 2269"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/editpage_grad_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/editpage_rating_page_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/driver_thumbs_down_imageBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:fontFamily="sans-serif-light"
                android:textSize="25sp"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/editpage_numberof_thumbsup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:inputType="number"
                android:fontFamily="sans-serif-light"
                android:textSize="13dp"
                android:textColor="@color/white"/>
            <ImageView

                android:layout_marginLeft="14dp"
                android:id="@+id/driver_thumbs_up_imageBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_down_black_24dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:fontFamily="sans-serif-light"
                android:textSize="25sp" />
            <EditText
                android:id="@+id/editpage_numberof_thumbsdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="23"
                android:fontFamily="sans-serif-light"
                android:textSize="13dp"
                android:textColor="@color/white"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/edit_profileBT"
                android:layout_width="228dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/rounded_button"
                android:text="Edit Profile"
                android:backgroundTint="@android:color/white"
                android:textColor="@color/headings"/>

        </RelativeLayout>









    </LinearLayout>
</RelativeLayout>